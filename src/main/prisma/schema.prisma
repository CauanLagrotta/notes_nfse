generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id               Int    @id @default(autoincrement())
  customer_name    String @unique
  customer_email   String @unique
  customer_phone   String @unique
  customer_address String
  customer_cpf     String @unique

  taxInvoices TaxInvoice[]

  @@map("customers")
}

model TaxInvoice {
  id                Int      @id @default(autoincrement())
  customer_tax_name String
  customer          Customer @relation(fields: [customer_tax_name], references: [customer_name])
  price             Float
  service           String
  tax_status        String   @default("Pendente")
  issued_date       DateTime @default(now())

  @@map("tax_invoices")
}
